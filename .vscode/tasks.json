{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "startDate",
      "type": "promptString",
      "description": "Start date (YYYY-MM-DD)",
      "default": "2025-10-27"
    },
    {
      "id": "endDate",
      "type": "promptString",
      "description": "End date (YYYY-MM-DD)",
      "default": "2026-01-30"
    }
  ],
  "tasks": [
    {
      "label": "Changelog: fetch range (use API)",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/fetch_changelog.py",
        "--use-api",
        "--start-date",
        "${input:startDate}",
        "--end-date",
        "${input:endDate}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Changelog: validate AI outputs",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/validate_ai_outputs.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "Changelog: list missing AI sidecars",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/list_missing_ai_sidecars.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "Changelog: generate AI sidecars from Markdown (no LLM)",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/generate_ai_sidecars_from_markdown.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "Changelog JP: list missing translations",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/list_missing_jp_translations.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "Changelog JP: validate translations",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/validate_jp_translations.py",
        "--allow-missing"
      ],
      "problemMatcher": []
    },
    {
      "label": "Changelog JP: generate index",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/generate_jp_index.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "VS Code Updates: fetch range",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/fetch_vscode_updates.py",
        "--start-date",
        "${input:startDate}",
        "--end-date",
        "${input:endDate}"
      ],
      "problemMatcher": []
    },
    {
      "label": "VS Code Updates: validate AI outputs",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/validate_vscode_updates_ai_outputs.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "VS Code Updates: list missing AI sidecars",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/list_missing_vscode_updates_ai_sidecars.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "VS Code Updates: generate AI sidecars from Markdown (no LLM)",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/generate_vscode_updates_ai_sidecars_from_markdown.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "VS Code Updates JP: list missing translations",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/list_missing_vscode_updates_jp_translations.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "VS Code Updates JP: validate translations",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/validate_vscode_updates_jp_translations.py",
        "--allow-missing"
      ],
      "problemMatcher": []
    },
    {
      "label": "VS Code Updates JP: validate translations (strict no EN markers)",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/validate_vscode_updates_jp_translations.py",
        "--allow-missing",
        "--forbid-en-content-markers"
      ],
      "problemMatcher": []
    },
    {
      "label": "VS Code Updates JP: generate index",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/generate_vscode_updates_jp_index.py"
      ],
      "problemMatcher": []
    }
  ]
}
